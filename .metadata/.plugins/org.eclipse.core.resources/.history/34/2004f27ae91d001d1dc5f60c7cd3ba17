package java1;

public class p3_operator {
	
	// Ham toan hoc pho bien
	public static void main(String[] args) {
		int numberOne = 20;
		int numberTwo = 10;
		double numberThree = 123.456;
		
		int maxNumber = Math.max(numberOne, numberTwo);
		System.out.println(maxNumber);
		int minNumber = Math.min(numberOne, numberTwo);
		System.out.println(minNumber);
		double ceilNumber = Math.ceil(numberThree);
		System.out.println(ceilNumber);
		double floorNumber = Math.floor(numberThree);
		System.out.println(floorNumber);
		double roundNumber = Math.round(numberThree);
		System.out.println(roundNumber);
	}
	
	//005 Toan tu logic && ||  !
	public static void main005(String[] args) {
		//ket hop de tra ve kieu boolean
	}
	
	//004 Toan tu so sanh > < >= <= == !=
	public static void main004(String[] args) {
		// tra ve gia tri kieu boolean
	}
	
	//003 Toan tu ++ --
	public static void main003(String[] args) {
		int numberStart = 20;
		int numberEnd = 0;
		
		numberEnd = numberStart++;
		System.out.println(numberStart);
		System.out.println(numberEnd);
		
		numberEnd = ++numberStart;
		System.out.println(numberStart);
		System.out.println(numberEnd);
		
	}
	
	//002 Toan tu gan 
	public static void main002(String[] args) {
		int number = 20;
		
		System.out.println("Start = " + number);
		
		// number = number + 10
		number += 10;
		System.out.println("After = " + number);
		// number = number - 10
		number -= 10;
		System.out.println("After = " + number);
		// number = number * 10
		number *= 10;
		System.out.println("After = " + number);
		// number = number / 10
		number /= 10;
		System.out.println("After = " + number);
		// number = number % 10
		number %= 10;
		System.out.println("After = " + number);
	}
	
	//001 Toan tu so hoc + - * / %
	public static void main001(String[] args) {
		int numberOne = 20;
		int numberTwo = 3;
		int result;
		
		// +
		result = numberOne + numberTwo;
		System.out.println(numberOne + " + " + numberTwo + " = " + result);
		
		// -
		result = numberOne - numberTwo;
		System.out.println(numberOne + " - " + numberTwo + " = " + result);
		
		// *
		result = numberOne * numberTwo;
		System.out.println(numberOne + " * " + numberTwo + " = " + result);
		
		// /
		result = numberOne / numberTwo;
		System.out.println(numberOne + " / " + numberTwo + " = " + result);
		
		// %
		result = numberOne % numberTwo;
		System.out.println(numberOne + " % " + numberTwo + " = " + result);
	}
}
